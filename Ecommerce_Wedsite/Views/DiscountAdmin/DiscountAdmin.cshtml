@model AllLayout
@{
    ViewData["Title"] = "Discount Admin Page";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<link href="~/css/crud2.css" rel="stylesheet" type="text/css">
<link href="/css/admintable2.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<div>
    <div class="card-body" style="overflow-x:hidden">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>Discount <b>Table</b></h2>
                </div>
                <div class="col-sm-7">
                    <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New</span></a>
                </div>
            </div>
        </div>
        <div class="table-responsive" style="max-height: 550px;">
            <div class="table-wrapper">
                <table class="table table-striped table-hover">
                    <thead> <!--Danh sách bảng-->
                        <tr>
                            <th>
                                Discount ID
                            </th>
                            <th>
                               Discount Rate 
                            </th>
                            <th>
                               Discount Number
                            </th>
                            <th>
                               Discount Random ID
                            </th>
                            <th>
                               Discount Name
                            </th>
                            <th>
                               Edit
                            </th>
                            <th>
                               Delete
                            </th>
                        </tr>
                    </thead>

                    <tbody> 
                        @if (Model != null) 
                        {
                            @foreach (var item in Model.discountt_ViewModels.discountt){ 
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Discount_Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount_Rate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount_No)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount_RanId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Discount_Name)</td>
                                    <td>@Html.ActionLink("Edit", "discountadminedit", item) <i class="material-icons">&#xE8B8;</i></td>
                                    <td>@Html.ActionLink("Delete", "discountadmindelete", item) <i class="material-icons">&#xE5C9;</i></td>
                                    <!--Tao controller hay service cho edit va delete-->
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="clearfix">
                    <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                    <ul class="pagination">
                        <li class="page-item disabled"><a href="#">Previous</a></li>
                        <li class="page-item"><a href="#" class="page-link">1</a></li>
                        <li class="page-item"><a href="#" class="page-link">2</a></li>
                        <li class="page-item active"><a href="#" class="page-link">3</a></li>
                        <li class="page-item"><a href="#" class="page-link">4</a></li>
                        <li class="page-item"><a href="#" class="page-link">5</a></li>
                        <li class="page-item"><a href="#" class="page-link">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
