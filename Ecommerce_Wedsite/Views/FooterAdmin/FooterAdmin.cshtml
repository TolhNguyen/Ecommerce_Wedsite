@model AllLayout
@{
    ViewData["Title"] = "Footer Admin Page";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<link href="/css/admintable2.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div>
    <div class="card-body">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>Footer <b>Table</b></h2>
                        </div>
                        <div class="col-sm-7">
                            <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New</span></a>
                        </div>
                    </div>
                </div>
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Footer title
                            </th>
                            <th>
                                Footer condition
                            </th>
                            <th>
                                Footer Parent ID
                            </th>
                            <th>
                                Footer Level
                            </th>
                            <th>
                                Footer Type ID
                            </th>
                            <th>
                                Footer Order
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            // có thể dùng chung viewmodel, nhưng view sẽ hiện khác nhau tùy service trong controller.
                            @foreach (var item in Model.footer_ViewModels.footer)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Footer_Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Footer_Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FooterCondition)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FooterParent_Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FooterLevels)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FooterType_Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Footer_Order)</td>
                                    <td>@Html.ActionLink("Edit", "discountadminedit", "#")</td>
                                    <td>@Html.ActionLink("Delete", "discountadmindelete", "#")</td>
                                    <!--Tao controller hay service cho edit va delete-->
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

