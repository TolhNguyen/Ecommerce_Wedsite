	// Chức năng xóa product cart
	function CartXoa(no) {
    if (getCart('cart') !== "") {
		var cartcookie = getCart('cart').substring(0);
        var cartcookieobj = JSON.parse(cartcookie);
		let item = Object.values(cartcookieobj);
